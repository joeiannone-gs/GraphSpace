{
    "version": "0.2.0",
    "configurations": [
  
      {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
      },
  
      {
        "name": "Next.js: debug server-side",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run dev"
      },
      {
        "name": "Next.js: debug client-side",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/gs-app",
        "smartStep": true,
        "skipFiles": [
          "${workspaceFolder}/gs-app/<node_internals>/**",
          "${workspaceFolder}/gs-app/node_modules/**/*.js",
          "${workspaceFolder}/gs-app/node_modules/**"
      ]
      },
      {
        "name": "Next.js: debug full stack",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/gs-app/node_modules/.bin/next",
        "runtimeArgs": ["--inspect"],
        "skipFiles": [
          "<node_internals>/**",
          "node_modules/**"
        ],
        "serverReadyAction": {
          "action": "debugWithEdge",
          "killOnServerStop": true,
          "pattern": "- Local:.+(https?://.+)",
          "uriFormat": "%s",
          "webRoot": "${workspaceFolder}/gs-app/"
        }
      },

      {
        "name": "Python Debugger: FastAPI",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": [
            "main:app",
            "--reload",
            "--port", 
            "8080"
        ],
        "jinja": true
    },
    {
        "name": "Python Debugger: Current File (Integrated Terminal)",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": false,
        // "env": {
        //     "CONDA_DEFAULT_ENV": "computeserver"
        // }
    },
    {
        "name": "Python Debugger: Attach",
        "type": "debugpy",
        "request": "attach",
        "connect": {
            "host": "localhost",
            "port": 5678
        }
    },
    {
        "name": "Python: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": false,
        "env": {
            "CONDA_DEFAULT_ENV": "computeserver"
        }
    },
    {
        "name": "Python: Flask",
        "type": "debugpy",
        "request": "launch",
        "module": "flask",
        "env": {
            "FLASK_APP": "server/manager/app.py",
            "FLASK_DEBUG": "1"
        },
        "args": [
            "run",
            "--no-debugger"
        ],
        "jinja": true
    }
    ]
  }